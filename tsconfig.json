{
  "compilerOptions": {
    "allowJs": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~assets/*": [
        "./src/shared/assets/*"
      ],
      "~public/*": [
        "./public/*"
      ],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/shared/types"
    ],
  },
  "extends": "./.configs/tsconfig.json",
  "include": [
    "eslint.config.js",
    "src",
    "./.configs/vite.config.ts"
  ]
}
